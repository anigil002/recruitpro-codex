# RecruitPro Production Environment Configuration
# Copy this file to .env and fill in your production values

# ============================================
# CORE APPLICATION SETTINGS
# ============================================

# Application name
RECRUITPRO_APP_NAME="RecruitPro"

# Environment: development, staging, or production
RECRUITPRO_ENVIRONMENT="production"

# Secret key for JWT token signing (REQUIRED - generate with: python -c "import secrets; print(secrets.token_hex(32))")
RECRUITPRO_SECRET_KEY="your-secure-secret-key-here-change-this"

# ============================================
# DATABASE CONFIGURATION
# ============================================

# For PostgreSQL (PRODUCTION - RECOMMENDED)
RECRUITPRO_DATABASE_URL="postgresql://username:password@hostname:5432/recruitpro"

# Examples:
# - Local PostgreSQL: postgresql://recruitpro:password@localhost:5432/recruitpro
# - Supabase: postgresql://postgres:password@db.xxxxxxxxxxxxx.supabase.co:5432/postgres
# - Neon: postgresql://user:password@ep-xxxxx.us-east-2.aws.neon.tech/neondb
# - Azure: postgresql://user@server:password@server.postgres.database.azure.com:5432/recruitpro

# For SQLite (DEVELOPMENT ONLY - NOT RECOMMENDED FOR PRODUCTION)
# RECRUITPRO_DATABASE_URL="sqlite:///./data/recruitpro.db"

# ============================================
# REDIS CONFIGURATION (Background Jobs)
# ============================================

# Redis URL for persistent job queue (REQUIRED FOR PRODUCTION)
REDIS_URL="redis://localhost:6379/0"

# Examples:
# - Local Redis: redis://localhost:6379/0
# - Redis with password: redis://:password@localhost:6379/0
# - Redis Cloud: redis://:password@redis-xxxxx.c1.us-east-1-2.ec2.redns.redis-cloud.com:12345/0
# - Upstash: redis://:password@xxxxxxx.upstash.io:6379

# Enable Redis queue (set to "true" to use Redis instead of in-memory queue)
USE_REDIS_QUEUE="true"

# ============================================
# AI SERVICES - GOOGLE GEMINI API
# ============================================

# Google Gemini API Key (REQUIRED for AI features)
# Get your API key from: https://ai.google.dev/gemini-api/docs/api-key
GEMINI_API_KEY="your-gemini-api-key-here"

# ============================================
# GOOGLE CUSTOM SEARCH (Optional)
# ============================================

# Google Custom Search API Key (for enhanced sourcing)
# Get from: https://developers.google.com/custom-search/v1/overview
GOOGLE_API_KEY=""

# Google Custom Search Engine ID
GOOGLE_CSE_ID=""

# ============================================
# SMARTRECRUITERS INTEGRATION (Optional)
# ============================================

# SmartRecruiters credentials (if integrating with SmartRecruiters ATS)
SMARTRECRUITERS_EMAIL=""
SMARTRECRUITERS_PASSWORD=""
SMARTRECRUITERS_COMPANY_ID=""
SMARTRECRUITERS_BASE_URL="https://app.smartrecruiters.com"

# ============================================
# SECURITY SETTINGS
# ============================================

# JWT token expiration in minutes (default: 60)
RECRUITPRO_ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS allowed origins (comma-separated list)
RECRUITPRO_CORS_ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# ============================================
# MONITORING & ERROR TRACKING
# ============================================

# Sentry DSN for error monitoring (RECOMMENDED FOR PRODUCTION)
# Get from: https://sentry.io
SENTRY_DSN=""

# Release version for Sentry
RELEASE_VERSION="0.1.0"

# ============================================
# LOGGING
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="INFO"

# ============================================
# STORAGE
# ============================================

# Storage path for uploaded files (default: ./storage)
RECRUITPRO_STORAGE_PATH="./storage"

# ============================================
# NOTES
# ============================================

# 1. NEVER commit this file with real credentials to version control
# 2. Generate a strong SECRET_KEY:
#    python -c "import secrets; print(secrets.token_hex(32))"
# 3. For production, use PostgreSQL instead of SQLite
# 4. For production, use Redis for the job queue
# 5. Enable Sentry for production error monitoring
# 6. Use strong passwords and rotate them regularly
# 7. Keep your API keys secure and never share them

# ============================================
# QUICK START FOR PRODUCTION
# ============================================

# 1. Copy this file: cp .env.production.example .env
# 2. Generate and set RECRUITPRO_SECRET_KEY
# 3. Set up PostgreSQL and configure RECRUITPRO_DATABASE_URL
# 4. Set up Redis and configure REDIS_URL
# 5. Get Gemini API key and set GEMINI_API_KEY
# 6. (Optional) Set up Sentry and configure SENTRY_DSN
# 7. Install dependencies: pip install -r requirements.txt
# 8. Run migrations: alembic upgrade head
# 9. Start the app: uvicorn app.main:app --host 0.0.0.0 --port 8000
# 10. Start workers: python worker.py
