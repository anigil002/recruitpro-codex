{
  "name": "recruitpro-desktop",
  "version": "0.1.0",
  "private": true,
  "description": "Electron desktop shell for the RecruitPro platform",
  "main": "src/main.js",
  "author": "RecruitPro Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "ELECTRON_START_URL=http://localhost:3000 electron .",
    "lint": "echo 'No lint step configured'",
    "stage-backend": "node ./scripts/stage-backend.js",
    "package": "electron-builder --dir",
    "make": "electron-builder",
    "dist": "electron-builder",
    "prepackage": "npm run stage-backend",
    "premake": "npm run stage-backend",
    "predist": "npm run stage-backend"
  },
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.recruitpro.desktop",
    "productName": "RecruitPro Desktop",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "renderer/**/*",
      "scripts/**/*",
      "preload.js",
      "package.json",
      "build/backend/**/*"
    ],
    "extraResources": [
      {
        "from": "build/backend",
        "to": "backend"
      }
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "https://updates.recruitprohq.com/recruitpro-desktop"
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.business"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.8"
  }
}
